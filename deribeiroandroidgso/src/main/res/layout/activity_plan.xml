<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PlanActivity" >
    <com.viewpagerindicator.TitlePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_circle_indicator_fill_color"
        android:backgroundTintMode="screen"
        android:fadeScrollbars="true"
        android:fadingEdge="horizontal"
        android:fitsSystemWindows="true"
        android:isScrollContainer="true"
        android:textColor="@color/primary_material_light"
        app:footerColor="@color/foreground_material_light"
        app:selectedColor="@color/primary_dark_material_light" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="15dp"
        android:background="@drawable/circle"
        android:contentDescription="Heute"
        android:elevation="3dp"
        android:src="@drawable/ic_goto_today"
        android:visibility="visible" />

</LinearLayout>